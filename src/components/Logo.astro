---
import { Image } from "astro:assets";
import LogoImage from "@/assets/logo.svg";
import { useTranslations } from "@/i18n";

const t = useTranslations();
---

<Image
  src={LogoImage}
  alt={t("siteMetadata.title")}
  widths={[40, 80]}
  sizes={`(max-width: 640px) 40px, 80px`}
  loading="eager"
/>
